@model GABS2025324AppWebMVC.Models.Brand

<style>
    body{
        background: linear-gradient(to bottom, #4A0065, #800080, #C25997);
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4 text-white">¿Estás seguro que quieres eliminar esta?</h3>
            <h4 class="text-center mb-4 text-white">Marca</h4>
            <hr class="border-white">

            <table class="table table-bordered table table-striped table-hover">
                <tbody>
                    <tr>
                        <th scope="row" class="text-white">Nombre de la marca</th>
                        <td class="text-white">@Html.DisplayFor(model => model.BrandName)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="text-white">País</th>
                        <td class="text-white">@Html.DisplayFor(model => model.Country)</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4 text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BrandsId" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>